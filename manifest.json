{
  "manifest_version": 3,
  "name": "NoDoxxing - Anti-Doxx Extension",
  "version": "1.0.0",
  "description": "Automatically redacts sensitive data on web pages to prevent accidental exposure during screen sharing",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "NoDoxxing Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}